test_show:
  -
    id: no-wells
    layout:
    error:
      type: LayoutError
      message: No wells defined
  -
    id: no-attr
    layout:
      > [well.A1]
      >
      > [well.A2]
    error:
      type: LayoutError
      message: No attributes defined
  -
    id: degenerate-attr
    layout:
      > [well.A1]
      > x = 1
    error:
      type: UsageError
      message:
        - Found only degenerate attributes
        - 'x'
  -
    id: unknown-attr
    layout:
      > [well]
      > A1.x = 1
      > A2.x = 2
    attrs: XXX
    error:
      type: UsageError
      message:
        - No such attribute: 'XXX'
        - Did you mean: 'x'
  -
    id: one-attr
    layout:
      > [well]
      > A1.x = 1
      > A2.x = 2
    expected: one_attr.png
  -
    id: two-attrs
    layout:
      > [well.A1]
      > x = 1
      > y = 'a'
      >
      > [well.A2]
      > x = 2
      > y = 'b'
    expected: two_attrs.png
  -
    id: user-attrs-x-1
    layout:
      > [well.A1]
      > x = 1
    attrs: x
    expected: user_attrs_x_1.png
  -
