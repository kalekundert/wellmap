test_pick_attrs:
  -
    id: pick-ab
    df:
      -
        a: 1
        b: 2
      -
        a: 3
        b: 4

    attrs: []
    expected:
      [a,b]
  -
    id: pick-a
    df:
      -
        a: 1
        b: 2
      -
        a: 3
        b: 2

    attrs: []
    expected:
      [a]
  -
    id: err-empty
    df:
      []
    attrs: []
    error:
      type: LayoutError
      message: No attributes defined
  -
    id: err-degenerate
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: []
    error:
      type: UsageError
      message: Found only degenerate attributes (i.e. with the same value in every well): 'a', 'b'
  -
    id: choose-a-str
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: 'a'
    expected:
      - a
  -
    id: choose-a-list
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: ['a']
    expected:
      - a
  -
    id: choose-ab
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: ['a', 'b']
    expected:
      [a, b]
  -
    id: err-not-found
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: 'c'
    error:
      type: UsageError
      message:
        - No such attribute: 'c'
        - Did you mean: 'a', 'b'
  -
    id: err-not-found-plural
    df:
      -
        a: 1
        b: 2
      -
        a: 1
        b: 2

    attrs: ['c', 'd']
    error:
      type: UsageError
      message:
        - No such attributes: 'c', 'd'
        - Did you mean: 'a', 'b'

