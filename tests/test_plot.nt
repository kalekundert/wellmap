    id: sort-numbers
    layout:
      > [well]
      > A1.x = 6
      > A2.x = 5
      > A3.x = 4
      > A4.x = 1
      > A5.x = 2
      > A6.x = 3
    expected: sort_numbers.png
  -
    id: sort-dates
    layout:
      > [well]
      > A1.x = 2018-07-06
      > A2.x = 2018-07-05
      > A3.x = 2018-07-04
      > A4.x = 2018-07-01
      > A5.x = 2018-07-02
      > A6.x = 2018-07-03
    expected: sort_dates.png
  -
    id: sort-strings
